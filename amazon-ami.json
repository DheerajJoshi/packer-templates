{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "name": "alerta-{{isotime | clean_ami_name}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-b6ad5ac1",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `name`}}",
    "tags": {
      "packager": "packer.io"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "script": "scripts/alerta.sh",
    "pause_before": "10s"
  }]
}
