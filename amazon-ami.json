{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "name": "alerta-{{timestamp}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-aa1cc1dd",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `name`}}",
    "ami_description": "Alerta monitoring system http://github.com/guardian/alerta",
    "tags": {
      "Name": "Alerta"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/base.sh",
      "scripts/alerta.sh"
    ],
    "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
    "pause_before": "10s"
  }]
}
